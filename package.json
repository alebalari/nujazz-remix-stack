{
	"sideEffects": false,
	"scripts": {
		"build": "run-s \"build:*\"",
		"build:css": "tailwindcss -m -i ./styles/tailwind.css -o app/styles/tailwind.css",
		"build:remix": "remix build",
		"dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/styles/tailwind.css",
		"dev:remix": "remix watch",
		"dev:wrangler": "cross-env NODE_ENV=development npm run wrangler",
		"dev": "remix build && run-p \"dev:*\"",
		"format": "prettier --write .",
		"start": "cross-env NODE_ENV=production npm run wrangler",
		"typecheck": "tsc -b",
		"wrangler": "wrangler pages dev ./public",
		"postinstall": "npm run build"
	},
	"dependencies": {
		"@remix-run/cloudflare": "^1.9.0",
		"@remix-run/cloudflare-pages": "^1.9.0",
		"@remix-run/react": "^1.9.0",
		"@supabase/auth-helpers-remix": "^0.1.3",
		"cross-env": "^7.0.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tiny-invariant": "^1.3.1",
		"zod": "^3.20.2",
		"zodix": "^0.4.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^3.18.0",
		"@remix-run/dev": "^1.9.0",
		"@remix-run/eslint-config": "^1.9.0",
		"@types/react": "^18.0.25",
		"@types/react-dom": "^18.0.8",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.27.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-tailwindcss": "^3.7.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.20",
		"prettier": "^2.8.1",
		"prettier-plugin-tailwindcss": "^0.2.1",
		"supabase": "^1.27.9",
		"tailwindcss": "^3.2.4",
		"typescript": "^4.8.4",
		"wrangler": "^2.2.1"
	},
	"engines": {
		"node": ">=16.13"
	}
}
